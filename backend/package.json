{
  "name": "backend",
  "version": "1.0.0",
  "description": "Climate Analytics Backend",
  "license": "ISC",
  "author": "Hasmik Juhanyan",
  "type": "commonjs",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "dotenv -e .env -- nodemon --exec ts-node src/main.ts",
    "dev:debug": "dotenv -e .env -- nodemon --inspect --exec ts-node src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "prebuild": "npm run clean",
    "postbuild": "echo 'Build completed successfully!'",
    "docker:build": "docker build -t climate-analytics-backend .",
    "docker:run": "docker run -p 4000:4000 climate-analytics-backend"
  },
  "keywords": [],
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.11.0",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.10",
    "@types/ws": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
